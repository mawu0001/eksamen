    align-items: center;
  }

.uddannelse-container{
    display: flex;
    flex-direction: column;
    /* OBS teksten - uddannelse skal ikke være centreret!!!!!!!!!!!!!!!!!!!!!!!!!!!! */
    align-items: center; 
    padding: 40px 20px; 
}

.list {
    display: flex;
    flex-direction: column;
    align-items: center; 
    padding: 40px 20px; 
    margin-bottom: 100px;
  }

