---

<Layout>
  <section>
    <div class="localmenu1">
      <h2>Behandlingsområder</h2>
      <article class="submenu">
        <a href="#">Angst</a>
        <a href="#">Stress</a>
        <a href="#">Særligt Sensitiv</a>
        <a href="#">Spiseforstyrrelse</a>
      </article>
    </div>
    <article class="indhold">
      {
        data.map((type) => {
          return <Behandlings data={type} />;
        })
      }
    </article>
  </section>
  <section>
    <div class="localmenu2">
      <h2>Behandlingstyper</h2>
      <article class="submenu">
        <a href="#">Online</a>
        <a href="#">Walk & Talk</a>
        <a href="#">Samtale</a>
      </article>
    </div>
    <article class="indhold">
      {
        data.map((type) => {
          return <Behandlings data={type} />;
        })
      }
    </article>
  </section>
</Layout>

<style>
  h2 {
    text-align: center;
    padding-bottom: 40px;
  }
  a {
    color: var(--Pesto950);
    text-align: center;
    font-family: "General Sans";
    font-size: 24px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    text-transform: uppercase;
    text-decoration: none;
    width: fit-content;
  }
  .indhold {
    padding: 0 120px;
  }
  .localmenu1 {
    background-color: var(--pesto300);
    padding: 70px 90px;
  }
  .localmenu1 article {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    column-gap: 20px;
  }
  .localmenu2 {
    background-color: var(--flamepea300);
    padding: 70px 90px;
  }
  .localmenu2 article {
    display: flex;
    flex-direction: row;

    justify-content: space-evenly;
  }
  @media (max-width: 400px) {
    a {
      color: var(--Pesto950);
      text-align: center;
      font-family: "General Sans";
      font-size: 20px;
      font-style: normal;
      font-weight: 500;
      line-height: normal;
    }
  }
</style>
