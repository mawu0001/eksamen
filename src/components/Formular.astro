/* formular-------------------------------------------------- */
.formular{
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: var(--pesto300);
    margin-bottom: 15%;
}
.book{
    font-weight: normal;
    grid-column: span 2;
    text-align: center;
    margin-right: 50%;
    margin-bottom: -4%;
}
form{
    display: flex;
    flex-direction: column;
    margin: 15%;
}
input, textarea {
    margin-bottom: 15px;
    padding: 10px;
    border: none;
    border-radius: 25px;
    background-color: var( --flamepea50);
    font-size: 16px;
    font-family: var(--secondaryfont);
}
textarea {
    resize: none;
    height: 100px;
    padding-top: 10px;
}
.send_kontakt{
    background-color: var( --flamepea50);
    font-weight: bold;
    cursor: pointer;
    width: 229px;
    height: 68px;
    border-radius: 30px;
    border: none;
    color: var(--pesto950);
    font-family: var(--primaryfont);
    font-size: 25px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    text-transform: uppercase;
    transition:
      transform 0.3s,
      background-color 0.3s;
    align-self: center;
    margin-bottom: -10%;
}
.send_kontakt:hover {
    background-color: var(--cornflowerblue800);
    scale: 1.02;
    color: var(--flamepea50);
    cursor: pointer;
  }
/* kontaktboks---------------------------------------------- */
.contact_info {
    background-color: var( --flamepea50);
    padding: 20px;
    border-radius: 15px;
    text-align: left;
    display: flex;
    flex-direction: column;
    margin: 20%;
    width: 300px;
    height: 300px;
    align-content: center;
    gap: 10px;
}
.contact_item {
    display: flex;
    align-items: center;
    gap: 20px;
}
.contact_item img {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: var(--pesto300);
    padding: 5px;
}
.contact_item span {
    font-size: 16px;
}
/* Mobil */
@media (max-width: 450px) {
.formular{
    background-color: var(--pesto300);
    display: flex;
    flex-direction: column;
    margin-bottom: 20%;
    }
    .contact_info {
    background-color: var( --flamepea50);
    padding: 20px;
    border-radius: 15px;
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 26%;
    }
}
 </style>