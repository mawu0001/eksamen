---
const { indhold } = Astro.props;
---

<article id={indhold.slug}>
  <h3>{indhold.title}</h3>
  <p>{indhold.text}</p>
</article>

<style>
  article {
    margin-top: 50px;
  }
  h3 {
    font-size: 24px;
    padding-bottom: 15px;
    text-transform: capitalize;
  }
  p {
    column-count: 2;
    column-gap: 40px;
    max-width: none;
  }
  @media (max-width: 1000px) {
    p {
      column-count: 1;
    }
  }
</style>
