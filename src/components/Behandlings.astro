---
const { data } = Astro.props;
---

<article>
  <h3>{data.title}</h3>
  <p>
    {data.text}
  </p>
</article>

<style>
  article {
    margin-top: 50px;
  }
  h3 {
    text-transform: capitalize;
    padding-bottom: 15px;
  }
  p {
    column-count: 2;
    column-gap: 20px;
  }

  @media (max-width: 800px) {
    p {
      column-count: 1;
    }
  }
  @media (max-width: 450px) {
    p {
      column-count: 1;
    }
  }
</style>
