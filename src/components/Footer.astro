<style>
  p {
    font-family: var(--primaryfont);
    font-size: 16px;
    line-height: 20px;
  }
  p span {
    font-weight: 520;
  }
  h4 {
    text-transform: uppercase;
  }
  hr {
    background-color: var(--pesto950);
    height: 2px;
    width: 70%;
    border: none;
    margin: 1.5% 0;
  }
  footer {
    background-color: var(--flamepea400);
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    padding: 30px 90px;
  }
  #container1,
  #container2,
  #container3 {
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-content: stretch;
    justify-content: space-between;
  }
  #container1_1_2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 15px;
  }
  #container3_2_2 {
  }
  #container3_2_1 article {
    row-gap: 15px;
  }
  #psyko_logo {
    width: 40%;
    height: auto;
  }
  article {
    display: flex;
    flex-direction: column;
    row-gap: 5px;
  }
  #socials {
    display: flex;
    flex-direction: row;
    row-gap: 10px;
  }
  @media screen and (max-width: 800px) {
    #psyko_logo {
      width: 70%;
      height: auto;
    }
    hr {
      width: 100%;
    }
  }
  @media screen and (max-width: 450px) {
    footer {
      display: flex;
      flex-direction: column;
    }
    #container1,
    #container2,
    #container3 {
      row-gap: 20px;
    }
  }
</style>
