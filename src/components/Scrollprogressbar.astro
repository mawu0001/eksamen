<div class="scroll_container">
  <div class="scroll_indicator"></div>
</div>

<style>
  .scroll_container {
    position: sticky;
    z-index: 10;
    top: 122px;
    width: 100%;
    height: 15px;
    background-color: var(--flamepea50);
  }
  .scroll_indicator {
    width: 0%;
    height: 100%;
    background-color: var(--flamepea400);
  }
  @media (max-width: 800px) {
    .scroll_container {
      top: 106.4px;
    }
  }
</style>

<script>
  // kode fra tema 9, webfeature, fra l√¶rer i undervisning
  window.addEventListener("scroll", updateIndicator);

  function updateIndicator() {
    const scrolled =
      document.body.scrollTop || document.documentElement.scrollTop;
    const height =
      document.documentElement.scrollHeight -
      document.documentElement.clientHeight;
    const scrolledfactor = (scrolled / height) * 100;
    const indicator = document.querySelector(
      ".scroll_indicator"
    ) as HTMLElement;
    if (indicator) {
      indicator.style.width = scrolledfactor + "%";
    }
  }
</script>
